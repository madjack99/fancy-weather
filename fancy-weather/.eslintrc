{
  "extends": "airbnb-base",
  "parserOptions": {
    "ecmaVersion": 8,
    "sourceType": "module"
  },
  "env": {
    "node": true,
    "browser": true,
    "es6": true,
    "jest": true
  },
  "rules": {
    "linebreak-style": "off",
    "comma-dangle": [
      "error",
      {
        "functions": "never"
      }
    ],
    "import/prefer-default-export": "off",
    "arrow-parens": ["error", "as-needed"],
    "no-param-reassign": "off",
    "no-unused-expressions": ["off", { "allowTernary": true }],
    "no-use-before-define": ["error", { "functions": false }]
  }
}
